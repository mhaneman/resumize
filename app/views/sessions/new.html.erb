<h1> Sign In</h1>

<%= form_with url: sign_in_path do |form|%>
    
    <div class="mb-3"> 
        <%= form.label :email %>
        <%= form.text_field :email , class: "form-control", placeholder: "mike@company.com" %>
    </div>

    <div class="mb-3"> 
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control", placeholder: "super secret (random) password"%>
    </div>

    <div class="mb-3"> 
        <%= form.submit "Lets go", class: "btn btn-primary" %>
    </div>
    
<% end %>